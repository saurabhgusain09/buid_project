pipeline {    
    agent any 
    tools {
        jdk 'java-17'
        maven 'maven-3'
    }

    stages {   
        stage('Compile') {
            dir('Boardgame-main'){
            steps {
                sh 'mvn compile'
            }
            }
        }
        
        stage('Test') {
            dir('Boardgame-main'){
            steps {
                sh 'mvn test'
            }
            }
        }
        
        stage('Build') {
            dir('Boardgame-main'){
            steps {
                sh 'mvn package'
            }
            }
        }
    }
}
